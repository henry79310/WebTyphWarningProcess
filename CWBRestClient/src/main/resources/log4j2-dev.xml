<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName} --- [%15.15t] %-40.40c{1.} : %m%n
        </Property>
        <Property name="log-path">
            /data/workspace/execute/CWBRestClient/logs
        </Property>
    </Properties>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <RollingRandomAccessFile>
        	<name>cwbrestclient_exception_appender</name>
        	<filename>${log-path}/cwbrestclient_exception.log</filename>
        	<filePattern>${log-path}/cwbrestclient_exception-%d{yyyy-MM-dd}-%i.log.gz</filePattern>
        	<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName} --- [%15.15t] %-40.40c{1.} : %m%n" />
        	<DefaultRolloverStrategy fileIndex="max" max="7">
       			<Delete basePath="${log-path}" maxDepth="2" >
       				<IfFileName glob="${log-path}/cwbrestclient_exception-*.log.gz"/>
       				<IfLastModified age="1d"/>
       			</Delete>
       		</DefaultRolloverStrategy>
        	<Policies>
        		<SizeBasedTriggeringPolicy size="20MB"/>
        		<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
        	</Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConsoleAppender" />
        </Root>
        <AsyncLogger>
        	<name>cwb.project.car.model.CarProcessor</name>
        	<level>info</level>
        	<additivity>false</additivity>
        	<appenderRef>
        		<ref>cwbrestclient_exception_appender</ref>
        	</appenderRef>
        </AsyncLogger>

 
    </Loggers>
</Configuration>